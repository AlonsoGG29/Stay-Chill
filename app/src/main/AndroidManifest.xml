<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aka.staychill">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/staychill_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/staychill_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StayChill"
        tools:targetApi="31">

        <!-- SplashActivity como la actividad principal -->
        <activity
            android:name=".splash"
            android:exported="true">
            <!-- ConfiguraciÃ³n para que esta actividad sea la de inicio -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity
            android:name=".main"
            android:exported="false" />
        <activity
            android:name=".signup"
            android:exported="false" />
        <activity
            android:name=".login"
            android:exported="true" />
        <activity
            android:name=".welcome"
            android:exported="true" />

    </application>

</manifest>
