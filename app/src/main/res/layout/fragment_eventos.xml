<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Fecha y navegación del calendario -->
    <LinearLayout
        android:id="@+id/layout_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/diaSemana"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="15"
            android:textSize="50dp"
            android:textColor="@color/black">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miercoles"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dic 2024"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/table_semana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/layout_fecha"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Fila con los días de la semana -->
        <TableRow>
            <TextView
                android:id="@+id/dia0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dia2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dia3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dia4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="J"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dia5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dia6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />
        </TableRow>

        <!-- Fila con los números de la semana -->
        <TableRow>
            <TextView
                android:id="@+id/numero0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/numero1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/numero2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/numero3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/numero4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/numero5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/numero6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black" />
        </TableRow>

    </TableLayout>

    <!-- Contenedor de eventos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/table_semana"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtMisEventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis eventos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtOtrosEventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otros eventos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtSinEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes ningún evento creado."
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/btnAgregarEvento"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_calendario"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
